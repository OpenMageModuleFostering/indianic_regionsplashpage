<config>
    <modules>
        <Indianic_Managefields>
            <version>0.1.1</version>
        </Indianic_Managefields>
    </modules>
    <frontend>
        <routers>
            <managefields>
                <use>standard</use>
                <args>
                    <module>Indianic_Managefields</module>
                    <frontName>managefields</frontName>
                </args>
            </managefields>
        </routers>
        <layout>
            <updates>
                <managefields>
                    <file>managefields.xml</file>
                </managefields>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<managefields>
				<use>admin</use>
				<args>
					<module>Indianic_Managefields</module>
					<frontName>managefields</frontName>
				</args>
			</managefields>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<regionpage module="regionpage">
				<children>
                  <managefields module="managefields">
                    <title>Manage Fields</title>
						<sort_order>0</sort_order>
						<action>managefields/adminhtml_managefields</action>
					</managefields >
				</children>
			</regionpage>                 
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Indianic_Managefields>
							<title>Managefields Module</title>
							<sort_order>10</sort_order>
						</Indianic_Managefields>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<managefields>
					<file>managefields.xml</file>
				</managefields>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <managefields>
                <class>Indianic_Managefields_Model</class>
                <resourceModel>managefields_mysql4</resourceModel>
            </managefields>
            <managefields_mysql4>
                <class>Indianic_Managefields_Model_Mysql4</class>
                <entities>
                    <managefields>
                        <table>managefields</table>
                    </managefields>
                </entities>
            </managefields_mysql4>
        </models>
        <resources>
            <managefields_setup>
                <setup>
                    <module>Indianic_Managefields</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </managefields_setup>
            <managefields_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </managefields_write>
            <managefields_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </managefields_read>
        </resources>
        <blocks>
            <managefields>
                <class>Indianic_Managefields_Block</class>
            </managefields>
        </blocks>
        <helpers>
            <managefields>
                <class>Indianic_Managefields_Helper</class>
            </managefields>
        </helpers>
    </global>
</config>